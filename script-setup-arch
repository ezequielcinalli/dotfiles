#!/bin/bash

# first step: git clone https://github.com/ezequielcinalli/dotfiles.git

# set mirrors - see documentation
# https://wiki.archlinux.org/title/mirrors#Sorting_mirrors

# update packages
sudo pacman -Syu

# install packages
sudo pacman -S firefox kitty zsh keepassxc github-cli neovim ttf-font-awesome nodejs npm ranger flameshot pcmanfm feh picom pacman-contrib pavucontrol

# install oh-my-zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

# install zsh-vi-mode plugin for oh-my-zsh
git clone https://github.com/jeffreytse/zsh-vi-mode \
  $ZSH_CUSTOM/plugins/zsh-vi-mode

# install vim-plug 
sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

# install powerlevel10k
git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k

# install pomodoro cli (check font for emojis)
# see https://github.com/open-pomodoro/openpomodoro-cli#installation

# enter to repository and copy files to home folder
cd dotfiles
cp -r .config/ ~/
cp .gitconfig .p10k.zsh .zshrc .xprofile ~/
